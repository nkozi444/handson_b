{% extends 'base.html.twig' %}

{% block title %}Your dashboard — ARTEUM{% endblock %}

{% block body %}

{# Background #}
<div class="fixed inset-0 bg-gradient-to-b from-[#333333] to-[#222222] -z-10"></div>

<div class="relative z-10 min-h-screen text-white py-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">

    {# Header #}
    <header class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-10">
      <div>
        <h1 class="text-4xl font-extrabold tracking-tight">Welcome back</h1>
        <p class="mt-1 text-sm text-neutral-400">
          Hi — {{ user.username }}. Here’s your dashboard.
        </p>
      </div>

      <div class="flex items-center gap-3">

        <a href="{{ path('app_tour_new') }}"
           class="inline-flex items-center gap-2 bg-gradient-to-r from-indigo-600 to-violet-600 
                  hover:from-indigo-500 hover:to-violet-500 text-white font-semibold py-2 px-4 
                  rounded-lg shadow">
          Book a tour
        </a>

        <a href="{{ path('app_tour_index') }}"
           class="inline-flex items-center gap-2 border border-neutral-700 
                  text-neutral-100 py-2 px-4 rounded-lg hover:bg-neutral-800">
          My tours
        </a>

        <form action="{{ path('app_logout') }}" method="post">
          <button type="submit"
                  class="inline-flex items-center gap-2 border border-neutral-700 
                         text-neutral-100 py-2 px-3 rounded-lg hover:bg-neutral-800">
            Logout
          </button>
        </form>
      </div>
    </header>

    {# User Info + Stats #}
    <section class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-10">

      {# User card #}
      <div class="rounded-2xl bg-[#232323] border border-neutral-800 p-6 shadow">
        <h2 class="text-sm font-semibold text-neutral-300 mb-3">Your account</h2>

        <div class="flex items-start gap-3">
          <div class="h-12 w-12 rounded-full bg-neutral-700 flex items-center justify-center text-xl font-bold">
            {{ user.username|slice(0,1)|upper }}
          </div>

          <div class="flex-1">
            <div class="text-sm text-neutral-300 font-medium">{{ user.username }}</div>

            <div class="mt-3 flex flex-wrap gap-2">
              {% for role in user.roles %}
                <span class="px-2.5 py-0.5 rounded-md text-xs font-medium
                    {{ role == 'ROLE_ADMIN'
                        ? 'bg-amber-500 text-black'
                        : 'bg-neutral-700 text-neutral-200' }}">
                  {{ role|replace({'ROLE_': ''}) }}
                </span>
              {% endfor %}
            </div>

            <div class="mt-4 text-sm text-neutral-400">
              Member since:
              {{ user.createdAt ? user.createdAt|date('Y-m-d') : 'N/A' }}
            </div>

            <div class="mt-4">
              <a href="#" class="text-sm text-indigo-400 hover:text-indigo-300">Edit profile</a>
            </div>
          </div>
        </div>
      </div>

      {# Stats #}
      <div class="lg:col-span-2 grid grid-cols-1 sm:grid-cols-3 gap-4">

        <div class="rounded-2xl bg-[#232323] border border-neutral-800 p-4 shadow">
          <div class="text-sm text-neutral-400">Upcoming Tours</div>
          <div class="mt-4 text-3xl font-bold">{{ upcomingCount }}</div>
          <div class="mt-2 text-xs text-neutral-400">Scheduled in the future</div>
        </div>

        <div class="rounded-2xl bg-[#232323] border border-neutral-800 p-4 shadow">
          <div class="text-sm text-neutral-400">Past Tours</div>
          <div class="mt-4 text-3xl font-bold">{{ pastCount }}</div>
          <div class="mt-2 text-xs text-neutral-400">Completed tours</div>
        </div>

        <div class="rounded-2xl bg-[#232323] border border-neutral-800 p-4 shadow">
          <div class="text-sm text-neutral-400">Quick actions</div>
          <div class="mt-4 flex flex-col gap-2">
            <a href="{{ path('app_tour_new') }}" 
               class="text-sm text-indigo-400 hover:text-indigo-300">Create new tour</a>
            <a href="{{ path('app_tour_index') }}" 
               class="text-sm text-indigo-400 hover:text-indigo-300">View bookings</a>
          </div>
        </div>

      </div>
    </section>

    {# My Tours List #}
    <section class="rounded-2xl bg-[#232323] border border-neutral-800 p-6 shadow">
      <h3 class="text-lg font-semibold text-neutral-100 mb-4">My Tours</h3>

      {% if tours is not empty %}
        <div class="overflow-x-auto">
          <table class="min-w-full text-sm">
            <thead class="text-neutral-400 text-xs uppercase">
              <tr>
                <th class="px-4 py-2 text-left">#</th>
                <th class="px-4 py-2 text-left">Name</th>
                <th class="px-4 py-2 text-left">Date</th>
                <th class="px-4 py-2 text-left">Status</th>
                <th class="px-4 py-2 text-left">Actions</th>
              </tr>
            </thead>

            <tbody>
              {% for tour in tours %}
              <tr class="border-t border-neutral-800 hover:bg-neutral-800/50">
                <td class="px-4 py-3">{{ tour.id }}</td>
                <td class="px-4 py-3">{{ tour.name }}</td>
                <td class="px-4 py-3">{{ tour.date ? tour.date|date('Y-m-d H:i') : '—' }}</td>
                <td class="px-4 py-3">{{ tour.status }}</td>
                <td class="px-4 py-3">
                  <a href="{{ path('app_tour_show', {id: tour.id}) }}"
                     class="text-indigo-400 hover:text-indigo-300">View</a>
                </td>
              </tr>
              {% endfor %}
            </tbody>

          </table>
        </div>

      {% else %}
        <p class="text-neutral-400 text-center py-6">
          No tours yet — <a href="{{ path('app_tour_new') }}" 
          class="text-indigo-400 hover:text-indigo-300">create one</a>.
        </p>
      {% endif %}
    </section>

  </div>
</div>

{% endblock %}
