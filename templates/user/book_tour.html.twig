{% extends 'base.html.twig' %}

{% block title %}Book a Tour — ARTEUM{% endblock %}

{% block body %}
{# Background #}
<div class="fixed inset-0 -z-10 bg-gradient-to-b from-[#0b0f1c] via-[#0b0b14] to-black"></div>
<div class="fixed inset-0 -z-10 opacity-40 bg-[radial-gradient(900px_circle_at_20%_10%,rgba(99,102,241,0.25),transparent_60%)]"></div>

<div class="relative min-h-screen text-white py-12 px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-4xl">

    {# Header #}
    <header class="mb-8 flex items-start justify-between">
      <div>
        <p class="text-xs tracking-widest text-neutral-400 uppercase">Tours</p>
        <h1 class="mt-1 text-3xl font-extrabold tracking-tight">Book a Tour</h1>
        <p class="mt-2 text-sm text-neutral-400">
          Fill in your details and submit your request.
        </p>
      </div>

      <a href="{{ path('app_user_dashboard') }}"
         class="inline-flex items-center rounded-xl border border-white/10 bg-white/5 px-4 py-2 text-sm font-semibold text-neutral-100 hover:bg-white/10 transition">
        ← Dashboard
      </a>
    </header>

    {# Card #}
    <div class="rounded-3xl border border-white/10 bg-white/5 backdrop-blur p-8 shadow-xl shadow-black/40">

      {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

      {# Grid #}
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">

        {# Name #}
        <div>
          <label class="block text-sm font-semibold text-neutral-300 mb-1">
            {{ form_label(form.name) }}
          </label>
          {{ form_widget(form.name, {
            attr: {
              class: 'w-full bg-[#0f1220] text-white placeholder:text-neutral-400 border border-white/10 rounded-xl px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-400/40 transition'
            }
          }) }}
          <div class="text-xs text-red-400 mt-1">{{ form_errors(form.name) }}</div>
        </div>

        {# Email #}
        <div>
          <label class="block text-sm font-semibold text-neutral-300 mb-1">
            {{ form_label(form.email) }}
          </label>
          {{ form_widget(form.email, {
            attr: {
              class: 'w-full bg-[#0f1220] text-white placeholder:text-neutral-400 border border-white/10 rounded-xl px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-400/40 transition'
            }
          }) }}
          <div class="text-xs text-red-400 mt-1">{{ form_errors(form.email) }}</div>
        </div>

        {# Phone #}
        <div>
          <label class="block text-sm font-semibold text-neutral-300 mb-1">
            {{ form_label(form.phoneNumber) }}
          </label>
          {{ form_widget(form.phoneNumber, {
            attr: {
              class: 'w-full bg-[#0f1220] text-white placeholder:text-neutral-400 border border-white/10 rounded-xl px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-400/40 transition'
            }
          }) }}
          <div class="text-xs text-red-400 mt-1">{{ form_errors(form.phoneNumber) }}</div>
        </div>

        {# Guests #}
        <div>
          <label class="block text-sm font-semibold text-neutral-300 mb-1">
            {{ form_label(form.numberOfGuests) }}
          </label>
          {{ form_widget(form.numberOfGuests, {
            attr: {
              class: 'w-full bg-[#0f1220] text-white placeholder:text-neutral-400 border border-white/10 rounded-xl px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-400/40 transition'
            }
          }) }}
          <div class="text-xs text-red-400 mt-1">{{ form_errors(form.numberOfGuests) }}</div>
        </div>

        {# Date #}
        <div>
          <label class="block text-sm font-semibold text-neutral-300 mb-1">
            {{ form_label(form.date) }}
          </label>
          {{ form_widget(form.date, {
            attr: {
              class: 'w-full bg-[#0f1220] text-white border border-white/10 rounded-xl px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-400/40 transition'
            }
          }) }}
          <div class="text-xs text-red-400 mt-1">{{ form_errors(form.date) }}</div>
        </div>

        {# Exhibition #}
        <div>
          <label class="block text-sm font-semibold text-neutral-300 mb-1">
            {{ form_label(form.exhibition) }}
          </label>
          {{ form_widget(form.exhibition, {
            attr: {
              class: 'w-full bg-[#0f1220] text-white border border-white/10 rounded-xl px-4 py-2.5 focus:outline-none focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-400/40 transition'
            }
          }) }}
          <div class="text-xs text-red-400 mt-1">{{ form_errors(form.exhibition) }}</div>
        </div>
      </div>

      {# Requests #}
      <div>
        <label class="block text-sm font-semibold text-neutral-300 mb-1">
          {{ form_label(form.requestedExhibition) }}
          <span class="text-xs text-neutral-500">(optional)</span>
        </label>
        {{ form_widget(form.requestedExhibition, {
          attr: {
            class: 'w-full min-h-[110px] bg-[#0f1220] text-white placeholder:text-neutral-400 border border-white/10 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-indigo-500/40 focus:border-indigo-400/40 resize-y transition'
          }
        }) }}
        <div class="text-xs text-red-400 mt-1">{{ form_errors(form.requestedExhibition) }}</div>
      </div>

      {{ form_rest(form) }}

      {# Submit #}
      <div class="pt-4">
        <button type="submit"
          class="w-full rounded-2xl bg-gradient-to-r from-indigo-600 to-violet-600 py-3 text-sm font-bold text-white shadow-lg shadow-indigo-500/30 hover:brightness-110 focus:outline-none focus:ring-4 focus:ring-indigo-500/40 transition">
          Confirm Booking
        </button>
        <p class="mt-3 text-center text-xs text-neutral-400">
          You can track the status anytime in <span class="text-indigo-300 font-semibold">My bookings</span>.
        </p>
      </div>

      {{ form_end(form) }}
    </div>

  </div>
</div>
{% endblock %}
