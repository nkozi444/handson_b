{{ form_start(form, {
    attr: {
        class: "space-y-6"
    }
}) }}

<div class="space-y-4">

    <div>
        {{ form_label(form.name, 'Artist Name', {'label_attr': {'class': 'text-sm font-semibold text-neutral-200'}}) }}
        {{ form_widget(form.name, {
            attr: {
                class: "w-full mt-1 px-3 py-2 rounded-lg bg-neutral-900 border border-neutral-700 text-neutral-100 focus:border-indigo-500 focus:ring-indigo-500"
            }
        }) }}
        {{ form_errors(form.name) }}
    </div>

    <div>
        {{ form_label(form.bio, 'Biography', {'label_attr': {'class': 'text-sm font-semibold text-neutral-200'}}) }}
        {{ form_widget(form.bio, {
            attr: {
                rows: 5,
                class: "w-full mt-1 px-3 py-2 rounded-lg bg-neutral-900 border border-neutral-700 text-neutral-100 focus:border-indigo-500 focus:ring-indigo-500"
            }
        }) }}
        {{ form_errors(form.bio) }}
    </div>

    <div>
        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'text-sm font-semibold text-neutral-200'}}) }}
        {{ form_widget(form.email, {
            attr: {
                class: "w-full mt-1 px-3 py-2 rounded-lg bg-neutral-900 border border-neutral-700 text-neutral-100 focus:border-indigo-500 focus:ring-indigo-500"
            }
        }) }}
        {{ form_errors(form.email) }}
    </div>

    <div>
        {{ form_label(form.website, 'Website', {'label_attr': {'class': 'text-sm font-semibold text-neutral-200'}}) }}
        {{ form_widget(form.website, {
            attr: {
                class: "w-full mt-1 px-3 py-2 rounded-lg bg-neutral-900 border border-neutral-700 text-neutral-100 focus:border-indigo-500 focus:ring-indigo-500"
            }
        }) }}
        {{ form_errors(form.website) }}
    </div>

    <div>
        {{ form_label(form.imageFile, 'Artist Image', {'label_attr': {'class': 'text-sm font-semibold text-neutral-200'}}) }}
        {{ form_widget(form.imageFile, {
            attr: {
                class: "w-full mt-1 text-neutral-200"
            }
        }) }}
        {{ form_errors(form.imageFile) }}
    </div>

    <div class="flex items-center gap-2 mt-6">
        <button type="submit"
                class="px-4 py-2 bg-indigo-600 hover:bg-indigo-500 rounded-lg text-white font-semibold shadow">
            {{ button_label|default('Save') }}
        </button>
    </div>

</div>

{{ form_end(form) }}
