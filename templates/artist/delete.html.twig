<form method="post" action="{{ path('app_artist_delete', {id: artist.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this artist?');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ artist.id) }}">

    <button class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700 shadow">
        Delete Artist
    </button>
</form>
