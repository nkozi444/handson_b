{% extends 'admin/layout.html.twig' %}

{% block title %}Exhibitions{% endblock %}

{% block admin_content %}
<div class="h-full overflow-y-auto">
  <div class="max-w-5xl mx-auto">

    <div class="flex items-center justify-between mb-6">
      <h1 class="text-4xl font-extrabold">Exhibitions</h1>

      <div class="flex gap-3">
        <a href="{{ path('app_tour_index') }}"
           class="btn-secondary">
          ← Back to Tours
        </a>

        <a href="{{ path('app_exhibition_new') }}"
           class="btn-primary">
          + Add Exhibition
        </a>
      </div>
    </div>

    <div class="rounded-xl overflow-hidden bg-neutral-900/40 border border-neutral-800 shadow-xl">
      <table class="min-w-full divide-y divide-neutral-800 text-sm">
        <thead class="bg-neutral-900/60">
          <tr>
            <th class="px-6 py-3 text-left">Image</th>
            <th class="px-6 py-3 text-left">Title</th>
            <th class="px-6 py-3 text-left">Type</th>
            <th class="px-6 py-3 text-left">Active</th>
            <th class="px-6 py-3 text-left">Actions</th>
          </tr>
        </thead>

        <tbody class="divide-y divide-neutral-800">
          {% for item in exhibitions %}
            <tr class="hover:bg-neutral-800/40 transition">
              <td class="px-6 py-3">
                {% if item.imagePath %}
                  <img src="/images/exhibitions/{{ item.imagePath }}"
                       class="h-12 w-12 object-cover rounded-lg">
                {% else %}
                  <span class="text-neutral-500 text-xs">No image</span>
                {% endif %}
              </td>

              <td class="px-6 py-3">{{ item.title }}</td>
              <td class="px-6 py-3">{{ item.type ?: '—' }}</td>
              <td class="px-6 py-3">{{ item.isActive ? '✔ Active' : '✖ Disabled' }}</td>

              <td class="px-6 py-3">
                <a href="{{ path('app_exhibition_show', {id: item.id}) }}"
                   class="text-indigo-400 hover:underline">View</a>

                <span class="mx-1 text-neutral-500">•</span>

                <a href="{{ path('app_exhibition_edit', {id: item.id}) }}"
                   class="text-amber-400 hover:underline">Edit</a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5" class="text-center py-8 text-neutral-400">
                No exhibitions found.
              </td>
            </tr>
          {% endfor %}
        </tbody>

      </table>
    </div>

  </div>
</div>
{% endblock %}
