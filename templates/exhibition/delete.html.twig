<form method="post" action="{{ path('app_exhibition_delete', {id: exhibition.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this exhibition?');">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exhibition.id) }}">

    <button class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700 shadow">
        Delete Exhibition
    </button>
</form>
