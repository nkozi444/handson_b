{% extends 'base.html.twig' %}

{% block title %}Exhibition {{ exhibition.title }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto p-8 text-white">

    <a href="{{ path('app_exhibition_index') }}" class="text-indigo-400 hover:underline">← Back</a>

    <div class="mt-6 p-6 rounded-xl bg-neutral-900/40 border border-neutral-800 shadow-xl">

        <h1 class="text-4xl font-bold mb-4">{{ exhibition.title }}</h1>

        {% if exhibition.imagePath %}
            <img src="/images/exhibitions/{{ exhibition.imagePath }}" class="h-52 rounded-lg shadow mb-6">
        {% endif %}

        <div class="space-y-3 text-neutral-300 text-sm">
            <p><strong>Type:</strong> {{ exhibition.type ?: '—' }}</p>
            <p><strong>Period:</strong> {{ exhibition.period ?: '—' }}</p>
            <p><strong>Artists:</strong> {{ exhibition.artists ?: '—' }}</p>
            <p><strong>Description:</strong><br>{{ exhibition.description ?: 'No description.' }}</p>
            <p><strong>Start Date:</strong> {{ exhibition.startDate ? exhibition.startDate|date('Y-m-d H:i') : '—' }}</p>
            <p><strong>End Date:</strong> {{ exhibition.endDate ? exhibition.endDate|date('Y-m-d H:i') : '—' }}</p>
            <p><strong>Status:</strong> {{ exhibition.isActive ? 'Active' : 'Hidden' }}</p>
        </div>

    </div>

</div>
{% endblock %}
