{# templates/admin/sidebar.html.twig #}
{% set current_route = app.request.attributes.get('_route') %}

<div class="flex flex-col h-full">

  {# SIDEBAR WRAPPER (gradient card) #}
  <div class="flex-1 overflow-y-auto rounded-2xl p-5
              bg-gradient-to-b from-neutral-900/70 to-neutral-900/40
              backdrop-blur-xl border border-white/10
              shadow-2xl shadow-black/60">

    {# HEADER #}
    <div class="flex items-center gap-3 mb-6">
      <div class="h-11 w-11 rounded-xl
                  bg-gradient-to-tr from-indigo-600 to-violet-600
                  flex items-center justify-center text-white text-base font-bold
                  shadow-inner shadow-indigo-500/40">
        AG
      </div>
      <div>
        <div class="text-sm font-semibold">Art Gallery Admin</div>
        <div class="text-xs text-neutral-400">Manage tours & exhibitions</div>
      </div>
    </div>

    {# NAVIGATION #}
    <nav class="space-y-1 text-sm">

      {# DASHBOARD #}
      <a href="{{ path('app_tour_dashboard') }}"
         class="flex items-center gap-3 px-3 py-2 rounded-xl transition-colors
         {{ current_route starts with('app_tour_dashboard')
              ? 'bg-indigo-700/80 text-white shadow-md shadow-indigo-500/30'
              : 'text-neutral-300 hover:bg-neutral-800/80' }}">

        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M3 12h6v8H3zM15 4h6v16h-6zM9 8h6v12H9z"/>
        </svg>

        <span class="font-medium">Dashboard</span>
      </a>

      {# EXHIBITIONS #}
      <a href="{{ path('app_exhibition_index') }}"
         class="flex items-center gap-3 px-3 py-2 rounded-xl transition-colors
         {{ current_route starts with('app_exhibition')
              ? 'bg-indigo-700/80 text-white shadow-md shadow-indigo-500/30'
              : 'text-neutral-300 hover:bg-neutral-800/80' }}">

        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M3 7h18M3 12h18M3 17h18"/>
        </svg>

        <span class="font-medium">Exhibitions</span>
      </a>

      {# TOURS #}
      <a href="{{ path('app_tour_index') }}"
         class="flex items-center gap-3 px-3 py-2 rounded-xl transition-colors
         {{ current_route starts with('app_tour')
              ? 'bg-indigo-700/80 text-white shadow-md shadow-indigo-500/30'
              : 'text-neutral-300 hover:bg-neutral-800/80' }}">

        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M4 7h16M4 12h10M4 17h7"/>
        </svg>

        <span class="font-medium">Tours</span>

        {% if tours is defined %}
          <span class="ml-auto text-[11px] bg-neutral-900/80 px-2 py-0.5 rounded-full text-neutral-200 border border-white/10">
            {{ tours|length }}
          </span>
        {% endif %}
      </a>

      {# ARTISTS #}
      <a href="{{ path('app_artist_index') }}"
         class="flex items-center gap-3 px-3 py-2 rounded-xl transition-colors
         {{ current_route starts with('app_artist')
              ? 'bg-indigo-700/80 text-white shadow-md shadow-indigo-500/30'
              : 'text-neutral-300 hover:bg-neutral-800/80' }}">

        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M12 2l3 7h7l-5.5 4 2 7L12 16 5.5 20l2-7L2 9h7z"/>
        </svg>

        <span class="font-medium">Artists</span>
      </a>

      {# ACTIVITY LOGS #}
      <a href="{{ path('admin_activity_logs') }}"
         class="flex items-center gap-3 px-3 py-2 rounded-xl transition-colors
         {{ current_route starts with('admin_activity_logs')
              ? 'bg-indigo-700/80 text-white shadow-md shadow-indigo-500/30'
              : 'text-neutral-300 hover:bg-neutral-800/80' }}">

        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M8 7h8M8 11h8M8 15h6M6 3h12a2 2 0 012 2v14a2 2 0 01-2 2H6a2 2 0 01-2-2V5a2 2 0 012-2z"/>
        </svg>

        <span class="font-medium">Activity Logs</span>
      </a>

      {# SETTINGS #}
      <a href="{{ path('app_settings_index') }}"
         class="flex items-center gap-3 px-3 py-2 rounded-xl transition-colors
         {{ current_route starts with('app_settings')
              ? 'bg-indigo-700/80 text-white shadow-md shadow-indigo-500/30'
              : 'text-neutral-300 hover:bg-neutral-800/80' }}">

        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                d="M12 4v4M6 20v-6a6 6 0 0112 0v6"/>
        </svg>

        <span class="font-medium">Settings</span>
      </a>

    </nav>

    {# FOOTER BUTTONS #}
    <div class="mt-6 pt-4 border-t border-neutral-800/80 space-y-2">
      <a href="{{ path('app_tour_new') }}"
         class="block text-center text-sm font-semibold py-2 px-3 rounded-xl
                bg-gradient-to-r from-indigo-600 to-violet-600
                hover:from-indigo-500 hover:to-violet-500
                shadow-lg shadow-indigo-500/40">
        + New Tour
      </a>

      <a href="{{ path('app_tour_index') }}"
         class="block text-center text-xs text-neutral-300 px-3 py-2 rounded-xl
                bg-neutral-900/40 border border-white/10">
        View all tours
      </a>
    </div>

  </div>

  {# LOGGED-IN FOOTER #}
  <div class="mt-3 text-[11px] text-neutral-400 text-center">
    <div>Logged in as</div>
    <div class="mt-1 font-medium text-neutral-200">
      {{ app.user.username|default('admin') }}
    </div>
  </div>

</div>
